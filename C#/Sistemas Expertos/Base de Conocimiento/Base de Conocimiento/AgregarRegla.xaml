        xmlns:local="clr-namespace:Base_de_Conocimiento"
        mc:Ignorable="d"

Title="AgregarRegla" Height="631.667" Width="720.171" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.707"/>
            <GradientStop Color="White"/>
            <GradientStop Color="#FFBF3D3D" Offset="0.376"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Height="581" VerticalAlignment="Top" Margin="0,54,4,-32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="421*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label1" Content="Antecedentes:"  HorizontalAlignment="Left" Margin="306,19,0,0" VerticalAlignment="Top" Height="26" Width="175"  Background="#FFFFAEAE" FontSize="14" FontWeight="Bold" Grid.Column="1"/>
        <TextBox x:Name="txtRegla" HorizontalAlignment="Left" Height="45" Margin="306,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" KeyDown="txtRegla_KeyDown" PreviewKeyDown="txtRegla_PreviewKeyDown" Grid.Column="1" FontSize="16"/>
        <Button x:Name="btnreg" Content="Agregar regla" HorizontalAlignment="Left" Margin="306,365,0,0" VerticalAlignment="Top" Width="342"
RenderTransformOrigin="0.704,0.401" Click="btnreg_Click" Height="34" Grid.Column="1" Background="#FF4FFF57"/>
