        <Button x:Name="btnPDer" Content=")" Grid.Column="1" HorizontalAlignment="Left" Margin="471,162,0,0" VerticalAlignment="Top"  Width="36" RenderTransformOrigin="0.933,2.4" Background="#FFFFAF3B" FontSize="18" FontWeight="Bold" FontStyle="Italic" Height="32"/>
        <Label x:Name="label1_Copy1" Content="Operaciones:"  HorizontalAlignment="Left" Margin="306,118,0,0" VerticalAlignment="Top" Height="28" Width="175"  Background="#FFFFAEAE" FontSize="14" FontWeight="Bold" Grid.Column="1"/>
